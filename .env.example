# Database Configuration
# For Docker: use service name 'postgresql'
# For local development: use 'localhost'
PG_HOST=postgresql
PG_USER=postgres
PG_PASSWORD=your_secure_password_here
PG_DATABASE=finance_tracker
PG_PORT=5432

# API Configuration
# For Docker: use service name 'python-api'
# For local development: use 'localhost'
PYTHON_API_URL=http://python-api:8000

# Security - IMPORTANT: Generate strong random secrets for production
# Use: openssl rand -base64 32
JWT_SECRET=generate_a_long_random_secret_here
SESSION_SECRET=generate_another_long_random_secret_here

# Environment
NODE_ENV=production
